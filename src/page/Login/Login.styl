html, body, .login-container
  width 100%
  height 100%

body
  background url('../../assets/images/login_bg.jpg') no-repeat center
  background-size cover

.login-container
  background rgba(0, 0, 0, .2)
  display flex
  align-items center
  justify-content center
  .login-box:before
    position absolute
    bottom 0
    right 0
    content ""
    width 0
    height 0
    border-bottom 11px solid #354f84
    border-top 11px solid transparent
    border-left 11px solid transparent
  .login-box
    position relative
    width 460px
    height 320px
    padding 20px 60px
    background rgba(240, 245, 255, .63)
    border-radius 7px
    box-shadow 4px 4px 3px rgba(240, 245, 255, .9)
    .logo
      color rgb(255, 255, 255)
      font-size 30px
      text-align center
      span
        color #354f84
    .login-form
      margin-top 20px
      display flex
      flex-direction column
      align-items center
    .login-item
      margin-top 20px
      width 100%
      height 47px
      background none
      border-bottom 2px solid #6f5e5e
      text-indent 15px
      font-size 16px
      font-weight bold
      color #f3f3f3
    .login-item:focus
      border-bottom 2px solid #5c7dbf
    button
      margin-top 40px
      width 80%
      height 50px
      background rgba(255, 255, 255, .6)
      border-radius 7px
      box-shadow 0 0 2px rgba(255, 255, 255, .6)
      font-size 18px
      font-weight bold
      color #4c3131
      cursor pointer