.login-form
  margin-top 20px
  display flex
  flex-direction column
  align-items center
.login-item
  margin-top 20px
  width 100%
  height 47px
  background none
  border-bottom 2px solid #6f5e5e
  text-indent 15px
  font-size 16px
  font-weight bold
  color #f3f3f3
.login-item:focus
  border-bottom 2px solid #5c7dbf
button
  margin-top 40px
  width 80%
  height 50px
  background rgba(255, 255, 255, .6)
  border-radius 7px
  box-shadow 0 0 2px rgba(255, 255, 255, .6)
  font-size 18px
  font-weight bold
  color #4c3131
  cursor pointer